<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Stats.Exercise.ExericseStatsFragment">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_se_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작 날짜"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="~"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_se_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="끝 날짜"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <Button
            android:id="@+id/button_se_7days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7일"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_se_1month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1개월"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_se_3months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3개월"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_se_1year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1년"
            android:textSize="10sp" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_se"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        android:textSize = "15sp" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_se">

        <Button
            android:id="@+id/button_se_max_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최대 무게(1RM)"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_se_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="볼륨"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_se_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textSize="10sp" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/se_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>